<!DOCTYPE html>
<html>
  <head>
    <title>CarpetTracking</title>
    <%= csrf_meta_tags %>

   <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %> 
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
  </head>
<style type="text/css">
	* {
		margin: 0px;
		letter-spacing: 0px;
	}
	
	h1 {
		text-align: center;
	}
	table {
		border-radius: 10px;
		border: 3px solid black;
		margin: auto;
	}
	tr, th, td {
		padding: 5px;
	}
	#search_bar {

		float: right;
		margin-top: 20px; 
	}
	#main_container {
		width: 1300px;
		margin: auto;
		height: 100%;
	}
		.table_show  {
			padding: 20px;
			width: 500px;
		}
		.forms {
			height: 400px;
			width: 400px;
			padding: 5px;
		}
		.back {
			float: left;
			margin-top: 20px; 
		}
		#footer {
			margin-bottom: 0px;
			height: 25px;
			width: 100%;
			position: absolute;
			bottom: 0px;
			background-color: green;
			text-align: center;
		}
		.button {
			width: 100px;
			font-size: 50pt;
			font-weight: bold;
			height: 50px;
		}
</style>
<script type="text/javascript">
	$(document).ready(function() {
		$('#product_id').click(function() {
			var quantity = $("#product_quantity").val();
			if (isNaN(quantity) == true) {
				alert("Amount inserted is not a number");
			} else if (quantity < 1 || quantity > 9) {
				alert("the amount of items must be a number between 1 and 9");
			}
		});
	});
</script>
  <body>
 
  	<h1 style="background-color: green; width: 100%; height: 75px;">Carpet Culture</h1>
  	<div id="main_container" >
  		 <div class="back"><%= link_to 'Home', users_path %></div>
  		<div id="search_bar">
  			<%= form_tag users_path, :method => 'get' do %>
			<%= text_field_tag :search, params[:serach] %>
			<%= submit_tag "search", name: nil %>
			<% end %>
		</div>
    <%= yield %>
	</div>
	<div id="footer"> Created by Fernando	&copy; 2017
		
	</div>
  </body>
</html>
